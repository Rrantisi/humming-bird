<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <section class="show-user">
        <div>
            <img src="<%= user.avatar %>" alt="user-avatar">
            <div class="profile-info">
                <h2><%= user.name %></h2>
                <p><%= user.email %></p>
                <p>Member since: <%= user.createdAt.toLocaleDateString() %></p>        
            </div>
        </div>
    </section>
    <%- include('../partials/footer') %>
</body>
</html>